<%= simple_form_for(@idea, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, :input_html => { :cols => 50, :rows => 5 } %>
    <%= f.input :addtional_info, :input_html => { :cols => 50, :rows => 5 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
