<%= simple_form_for(@idea, :html => {:class => 'form-horizontal', :multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, :input_html => { :cols => 50, :rows => 5 } %>
    <%= f.input :addtional_info, :input_html => { :cols => 50, :rows => 5 } %>

    
    <div class="control-group text optional">
      <label class="text optional control-label" for="idea_addtional_info">Attachments</label>
      
      <div class="controls" id="upload_box" >
        <input name="idea[documents_attributes][][data]" type="file">
      </div>

      <div class="controls">
        <%= link_to "Attach more", "#", :id => "attach_more" %>
      </div>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
