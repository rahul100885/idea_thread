<h1>Listing ideas</h1>

<table class="table table-striped">
  <thead>
    <tr>
    <th><th>
    <th><th>
    <th><th>
    <th><th>

  </tr>
  </thead>
  <tbody>
<% @ideas.each do |idea| %>
  <tr>
    <td>
      <div class="votes">
        <div class="mini-counts"><%= idea.votes.count %></div>
        <div>votes</div>
      </div>
    </td>

    <td>
      <div class="status commented">
        <div class="mini-counts"><%= idea.votes.count %></div>
        <div>Comment</div>
      </div>
    </td>

    <td>
      <div class="views">
        <div class="mini-counts"><%= idea.votes.count %></div>
        <div>views</div>
      </div>
    </td>

    <td>
      <div class="summary">
        <h3><%= link_to idea.title, idea %></h3>
        <div class="started">
          <span class="relativetime" title="2012-05-21 05:45:24Z"><%= time_ago_in_words(idea.created_at) %></span>
          <a href="/users/666596/rasman"><%= idea.user.name%></a>
        </div>
      <div>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= button_to 'New Idea', new_idea_path , :method => "get", :class => "btn btn-primary f-left" %>
